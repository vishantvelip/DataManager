  document.getElementById('totalHrs').textContent = h;
  document.getElementById('fixedCost').textContent = fixed;
  document.getElementById('totalFee').textContent = total.toLocaleString('en-IN');
}
document.getElementById('siteType').addEventListener('change',calc);
document.querySelectorAll('input[type=checkbox]').forEach(ch=>ch.addEventListener('change',calc));

/* ---- contact form ---- */
