/* ---- calculator ---- */
function calc(){
  let h = +document.getElementById('siteType').value;
  let fixed = 0;

  document.querySelectorAll('input[type=checkbox]:checked').forEach(ch=>{
    if (ch.value.startsWith('fixed:')) {
      fixed += +ch.value.split(':')[1];
    } else {
