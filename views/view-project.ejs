<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Projects</title>
  <style>
    /* Keep the existing styles unchanged */
  </style>
</head>
<body>
  <div class="container">
    <h1>Projects</h1>
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>
    <div class="search-form">
      <form action="/api/projects/view" method="GET">
        <input type="text" name="search" placeholder="Search by name or title..." value="<%= searchQuery || '' %>">
        <button type="submit">Search</button>
      </form>
    </div>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/api/projects/create">Add Project</a>
      <a href="/api/projects/json">JSON View</a>
    </div>
    <!-- Table for Laptops -->
    <table class="project-table" role="grid">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Project URL</th>
          <th scope="col">Code View URL</th>
          <th scope="col">Image</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (projects.length === 0) { %>
          <tr>
            <td colspan="7" style="text-align: center;">No projects found.</td>
          </tr>
        <% } else { %>
          <% projects.forEach(function(project) { %>
            <tr>
              <td title="<%= project.name %>"><%= project.name %></td>
              <td title="<%= project.title %>"><%= project.title %></td>
              <td title="<%= project.description %>"><%= project.description %></td>
              <td>
                <a href="<%= project.projectsUrl %>" target="_blank" rel="noopener noreferrer" title="<%= project.projectsUrl %>">
                  <%= project.projectsUrl %>
                </a>
              </td>
              <td>
                <a href="<%= project.projectCodeViewurl %>" target="_blank" rel="noopener noreferrer" title="<%= project.projectCodeViewurl %>">
                  <%= project.projectCodeViewurl %>
                </a>
              </td>
              <td>
                <% if (project.projectImg) { %>
                  <img src="<%= project.projectImg %>" alt="Project image for <%= project.name %>" loading="lazy" onerror="this.src='https://via.placeholder.com/80x50?text=Image+Not+Found'; this.alt='Image not found';"/>
                <% } else { %>
                  <img src="https://via.placeholder.com/80x50?text=No+Image" alt="No image available for <%= project.name %>" loading="lazy"/>
                <% } %>
              </td>
              <td class="action-buttons">
                <button class="delete" data-id="<%= project._id %>" aria-label="Delete project <%= project.name %>">Delete</button>
                <a href="/api/projects/edit/<%= project._id %>" class="edit" aria-label="Edit project <%= project.name %>">Edit</a>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
    <!-- Cards for Android -->
    <div class="project-cards">
      <% if (projects.length === 0) { %>
        <p style="text-align: center; color: #232946;">No projects found.</p>
      <% } else { %>
        <% projects.forEach(function(project) { %>
          <div class="project-card">
            <img src="<%= project.projectImg || 'https://via.placeholder.com/300x120?text=No+Image' %>" alt="Project image for <%= project.name %>" loading="lazy" onerror="this.src='https://via.placeholder.com/300x120?text=Image+Not+Found'; this.alt='Image not found';"/>
            <p><strong>Name:</strong> <%= project.name %></p>
            <p><strong>Title:</strong> <%= project.title %></p>
            <p><strong>Description:</strong> <%= project.description %></p>
            <p><strong>Project URL:</strong> <a href="<%= project.projectsUrl %>" target="_blank" rel="noopener noreferrer"><%= project.projectsUrl %></a></p>
            <p><strong>Code View URL:</strong> <a href="<%= project.projectCodeViewurl %>" target="_blank" rel="noopener noreferrer"><%= project.projectCodeViewurl %></a></p>
            <div class="action-buttons">
              <button class="delete" data-id="<%= project._id %>" aria-label="Delete project <%= project.name %>">Delete</button>
              <a href="/api/projects/edit/<%= project._id %>" class="edit" aria-label="Edit project <%= project.name %>">Edit</a>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <div class="overlay"></div>
  <div class="confirm-dialog">
    <p>Are you sure you want to delete this project?</p>
    <div class="buttons">
      <button class="confirm">Yes, Delete</button>
      <button class="cancel">Cancel</button>
    </div>
  </div>

  <script>
    // Delete functionality with confirmation dialog
    const deleteButtons = document.querySelectorAll('.delete');
    const confirmDialog = document.querySelector('.confirm-dialog');
    const overlay = document.querySelector('.overlay');
    const confirmBtn = document.querySelector('.confirm-dialog .confirm');
    const cancelBtn = document.querySelector('.confirm-dialog .cancel');
    let currentProjectId = null;

    deleteButtons.forEach(button => {
      button.addEventListener('click', () => {
        currentProjectId = button.dataset.id;
        confirmDialog.classList.add('show');
        overlay.classList.add('show');
        confirmBtn.focus();
      });
    });

    cancelBtn.addEventListener('click', () => {
      confirmDialog.classList.remove('show');
      overlay.classList.remove('show');
      currentProjectId = null;
    });

    confirmBtn.addEventListener('click', async () => {
      if (!currentProjectId) return;
      const button = document.querySelector(`.delete[data-id="${currentProjectId}"]`);
      button.disabled = true;
      button.textContent = 'Deleting...';

      try {
        const response = await fetch(`/api/projects/delete/${currentProjectId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
        });

        if (response.redirected) {
          window.location.href = response.url;
        } else {
          const result = await response.json();
          const messageDiv = document.createElement('p');
          messageDiv.className = response.ok ? 'message success-message' : 'message';
          messageDiv.textContent = result.message || 'An error occurred';
          document.querySelector('.container').insertBefore(messageDiv, document.querySelector('.search-form'));
        }
      } catch (error) {
        const messageDiv = document.createElement('p');
        messageDiv.className = 'message';
        messageDiv.textContent = 'Failed to delete project. Please try again.';
        document.querySelector('.container').insertBefore(messageDiv, document.querySelector('.search-form'));
      } finally {
        button.disabled = false;
        button.textContent = 'Delete';
        confirmDialog.classList.remove('show');
        overlay.classList.remove('show');
        currentProjectId = null;
      }
    });

    overlay.addEventListener('click', () => {
      confirmDialog.classList.remove('show');
      overlay.classList.remove('show');
      currentProjectId = null;
    });
  </script>
</body>
</html>
