<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Projects</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #22223b, #4a4e69 65%);
      min-height: 100vh;
      color: #232946;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 24px 0;
      overflow-x: hidden;
    }
    .container {
      max-width: 1200px;
      width: 90%;
      background: #f7f7fb;
      border-radius: 16px;
      box-shadow: 0 6px 24px rgba(34,34,59,0.07);
      padding: 24px;
      margin: 0 auto;
    }
    h1 {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 16px;
      color: #22223b;
      text-align: center;
      letter-spacing: 1px;
    }
    .message {
      color: #e63946;
      text-align: center;
      margin-bottom: 16px;
      font-weight: 500;
      padding: 8px;
      border-radius: 8px;
      background: #ffe6e6;
    }
    .success-message {
      color: #2ecc71;
      background: #e6ffed;
    }
    .search-form {
      display: flex;
      justify-content: center;
      margin-bottom: 16px;
      flex-wrap: wrap;
      gap: 8px;
    }
    .search-form input {
      padding: 10px;
      border: 1px solid #e0e4ea;
      border-radius: 8px;
      font-size: 1rem;
      width: 100%;
      max-width: 250px;
    }
    .search-form button {
      padding: 10px 16px;
      border: none;
      border-radius: 8px;
      background: #4f8cff;
      color: #fff;
      font-weight: 600;
      cursor: pointer;
      font-size: 1rem;
      min-width: 80px;
    }
    .search-form button:hover {
      background: #3b82f6;
    }
    .nav-links {
      margin-bottom: 16px;
      text-align: center;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 12px;
    }
    .nav-links a {
      color: #4f8cff;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      padding: 4px 8px;
      border-bottom: 2px solid transparent;
      transition: color 0.2s, border-color 0.2s;
    }
    .nav-links a:hover {
      color: #22223b;
      border-color: #4f8cff;
    }
    .project-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 8px;
      margin-top: 12px;
      display: table;
    }
    th, td {
      padding: 12px;
      text-align: left;
      background: #fff;
      font-size: 0.95rem;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    th {
      background: #e9ecef;
      font-weight: 600;
      color: #232946;
      border-bottom: 2px solid #bfc6d0;
    }
    tr {
      transition: background 0.2s;
    }
    tr:hover {
      background: #f1f5f9;
    }
    td img {
      border-radius: 6px;
      object-fit: cover;
      background: #e9ecef;
      width: 80px;
      height: 50px;
      display: block;
      box-shadow: 0 2px 6px rgba(34,34,59,0.09);
    }
    td a {
      color: #4f8cff;
      text-decoration: underline;
      display: inline-block;
      max-width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    td a:hover {
      color: #22223b;
    }
    .action-buttons {
      display: flex;
      gap: 8px;
      flex-wrap: nowrap;
      align-items: center;
      min-width: 140px;
    }
    button, a.edit {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.2s, transform 0.1s;
      min-width: 60px;
      line-height: 1.2;
      display: inline-block;
      text-align: center;
      box-sizing: border-box;
    }
    button.delete {
      background: #e63946;
      color: #fff;
    }
    button.delete:hover:not(:disabled) {
      background: #9b2226;
      transform: translateY(-1px);
    }
    button.delete:disabled {
      background: #b0b7c3;
      cursor: not-allowed;
    }
    a.edit {
      background: #4f8cff;
      color: #fff;
    }
    a.edit:hover {
      background: #3b82f6;
      transform: translateY(-1px);
    }
    a.edit:active {
      transform: scale(0.95);
    }
    .project-cards {
      display: none;
      flex-direction: column;
      gap: 16px;
      margin-top: 12px;
    }
    .project-card {
      background: #fff;
      border-radius: 8px;
      padding: 16px;
      box-shadow: 0 2px 8px rgba(34,34,59,0.1);
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    .project-card img {
      border-radius: 6px;
      object-fit: cover;
      width: 100%;
      height: 120px;
      background: #e9ecef;
    }
    .project-card p {
      font-size: 0.9rem;
      color: #232946;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
    .project-card a {
      color: #4f8cff;
      text-decoration: underline;
      font-size: 0.9rem;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .project-card .action-buttons {
      margin-top: 8px;
      justify-content: flex-start;
    }
    .confirm-dialog {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.2);
      z-index: 1000;
      display: none;
      text-align: center;
      width: 90%;
      max-width: 300px;
    }
    .confirm-dialog.show {
      display: block;
    }
    .confirm-dialog p {
      margin-bottom: 16px;
      font-weight: 500;
      color: #232946;
      font-size: 0.95rem;
    }
    .confirm-dialog .buttons {
      display: flex;
      gap: 8px;
      justify-content: center;
    }
    .confirm-dialog button {
      padding: 8px 16px;
      font-size: 0.9rem;
    }
    .confirm-dialog button.confirm {
      background: #e63946;
    }
    .confirm-dialog button.confirm:hover {
      background: #9b2226;
    }
    .confirm-dialog button.cancel {
      background: #6b7280;
    }
    .confirm-dialog button.cancel:hover {
      background: #4b5563;
    }
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 999;
      display: none;
    }
    .overlay.show {
      display: block;
    }
    @media (max-width: 768px) {
      .container { padding: 16px; }
      h1 { font-size: 1.5rem; }
      .search-form input { max-width: 200px; font-size: 0.9rem; }
      .search-form button { padding: 8px 12px; font-size: 0.9rem; }
      .nav-links a { font-size: 0.9rem; padding: 4px; }
      .project-table { display: none; }
      .project-cards { display: flex; }
    }
    @media (min-width: 769px) {
      .project-table { display: table; }
      .project-cards { display: none; }
    }
    @media (max-width: 414px) {
      .container { width: 95%; padding: 12px; }
      .search-form input { max-width: 100%; }
      .project-card img { height: 100px; }
      button, a.edit { padding: 6px 12px; font-size: 0.85rem; min-width: 48px; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Projects</h1>
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>
    <div class="search-form">
      <form action="/api/projects/view" method="GET">
        <input type="text" name="search" placeholder="Search by name or title..." value="<%= searchQuery || '' %>">
        <button type="submit">Search</button>
      </form>
    </div>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/api/projects/create">Add Project</a>
      <a href="/api/projects/json">JSON View</a>
    </div>
    <!-- Table for Laptops -->
    <table class="project-table" role="grid">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Project URL</th>
          <th scope="col">Code View URL</th>
          <th scope="col">Image</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (projects.length === 0) { %>
          <tr>
            <td colspan="7" style="text-align: center;">No projects found.</td>
          </tr>
        <% } else { %>
          <% projects.forEach(function(project) { %>
            <tr>
              <td title="<%= project.name %>"><%= project.name %></td>
              <td title="<%= project.title %>"><%= project.title %></td>
              <td title="<%= project.description %>"><%= project.description %></td>
              <td>
                <a href="<%= project.projectsUrl %>" target="_blank" rel="noopener noreferrer" title="<%= project.projectsUrl %>">
                  <%= project.projectsUrl %>
                </a>
              </td>
              <td>
                <a href="<%= project.projectCodeViewurl %>" target="_blank" rel="noopener noreferrer" title="<%= project.projectCodeViewurl %>">
                  <%= project.projectCodeViewurl %>
                </a>
              </td>
              <td>
                <% if (project.projectImg) { %>
                  <img src="<%= project.projectImg %>" alt="Project image for <%= project.name %>" loading="lazy" onerror="this.src='https://via.placeholder.com/80x50?text=Image+Not+Found'; this.alt='Image not found';"/>
                <% } else { %>
                  <img src="https://via.placeholder.com/80x50?text=No+Image" alt="No image available for <%= project.name %>" loading="lazy"/>
                <% } %>
              </td>
              <td class="action-buttons">
                <button class="delete" data-id="<%= project._id %>" aria-label="Delete project <%= project.name %>">Delete</button>
                <a href="/api/projects/edit/<%= project._id %>" class="edit" aria-label="Edit project <%= project.name %>">Edit</a>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
    <!-- Cards for Android -->
    <div class="project-cards">
      <% if (projects.length === 0) { %>
        <p style="text-align: center; color: #232946;">No projects found.</p>
      <% } else { %>
        <% projects.forEach(function(project) { %>
          <div class="project-card">
            <img src="<%= project.projectImg || 'https://via.placeholder.com/300x120?text=No+Image' %>" alt="Project image for <%= project.name %>" loading="lazy" onerror="this.src='https://via.placeholder.com/300x120?text=Image+Not+Found'; this.alt='Image not found';"/>
            <p><strong>Name:</strong> <%= project.name %></p>
            <p><strong>Title:</strong> <%= project.title %></p>
            <p><strong>Description:</strong> <%= project.description %></p>
            <p><strong>Project URL:</strong> <a href="<%= project.projectsUrl %>" target="_blank" rel="noopener noreferrer"><%= project.projectsUrl %></a></p>
            <p><strong>Code View URL:</strong> <a href="<%= project.projectCodeViewurl %>" target="_blank" rel="noopener noreferrer"><%= project.projectCodeViewurl %></a></p>
            <div class="action-buttons">
              <button class="delete" data-id="<%= project._id %>" aria-label="Delete project <%= project.name %>">Delete</button>
              <a href="/api/projects/edit/<%= project._id %>" class="edit" aria-label="Edit project <%= project.name %>">Edit</a>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <div class="overlay"></div>
  <div class="confirm-dialog">
    <p>Are you sure you want to delete this project?</p>
    <div class="buttons">
      <button class="confirm">Yes, Delete</button>
      <button class="cancel">Cancel</button>
    </div>
  </div>

  <script>
    // Delete functionality with confirmation dialog
    const deleteButtons = document.querySelectorAll('.delete');
    const confirmDialog = document.querySelector('.confirm-dialog');
    const overlay = document.querySelector('.overlay');
    const confirmBtn = document.querySelector('.confirm-dialog .confirm');
    const cancelBtn = document.querySelector('.confirm-dialog .cancel');
    let currentProjectId = null;

    deleteButtons.forEach(button => {
      button.addEventListener('click', () => {
        currentProjectId = button.dataset.id;
        confirmDialog.classList.add('show');
        overlay.classList.add('show');
        confirmBtn.focus();
      });
    });

    cancelBtn.addEventListener('click', () => {
      confirmDialog.classList.remove('show');
      overlay.classList.remove('show');
      currentProjectId = null;
    });

    confirmBtn.addEventListener('click', async () => {
      if (!currentProjectId) return;
      const button = document.querySelector(`.delete[data-id="${currentProjectId}"]`);
      button.disabled = true;
      button.textContent = 'Deleting...';

      try {
        const response = await fetch(`/api/projects/delete/${currentProjectId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
        });

        if (response.redirected) {
          window.location.href = response.url;
        } else {
          const result = await response.json();
          const messageDiv = document.createElement('p');
          messageDiv.className = response.ok ? 'message success-message' : 'message';
          messageDiv.textContent = result.message || 'An error occurred';
          document.querySelector('.container').insertBefore(messageDiv, document.querySelector('.search-form'));
        }
      } catch (error) {
        const messageDiv = document.createElement('p');
        messageDiv.className = 'message';
        messageDiv.textContent = 'Failed to delete project. Please try again.';
        document.querySelector('.container').insertBefore(messageDiv, document.querySelector('.search-form'));
      } finally {
        button.disabled = false;
        button.textContent = 'Delete';
        confirmDialog.classList.remove('show');
        overlay.classList.remove('show');
        currentProjectId = null;
      }
    });

    overlay.addEventListener('click', () => {
      confirmDialog.classList.remove('show');
      overlay.classList.remove('show');
      currentProjectId = null;
    });
  </script>
</body>
</html>
